---
import Layout from '../layouts/Layout.astro';
import Projects from '../components/Projects.astro';
---

<Layout>
  <!-- Navigation -->
  <nav class="nav" id="nav">
    <a href="#hero" class="logo">RM<span class="logo-accent">.dev</span></a>

    <ul class="nav-links">
      <li><a href="#hero">Home</a></li>
      <li><a href="#about">About</a></li>
      <li><a href="#skills">Skills</a></li>
      <li><a href="#projects">Projects</a></li>
      <li><a href="#experience">Experience</a></li>
      <li><a href="#certifications">Certifications</a></li>
      <li><a href="#contact">Contact</a></li>
    </ul>

    <div class="nav-right">
      <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
        <svg class="sun-icon" style="display: none;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
      <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="hero" class="hero">
    <!-- Floating Glass Orbs -->
    <div class="floating-orbs">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
      <div class="orb orb-3"></div>
    </div>

    <div class="hero-split">
      <!-- Left Side - Text Content -->
      <div class="hero-content">
        <div class="hero-badge">
          <span class="pulse-dot"></span>
          Available for opportunities
        </div>
        <h1 class="hero-title">Ramkrishna More</h1>
        <p class="hero-subtitle">
          <span class="typing-text" id="typingText"></span>
          <span class="typing-cursor">|</span>
        </p>
        <div class="hero-actions">
          <a href="#contact" class="btn btn-primary">
            <i class="fas fa-envelope"></i>
            Get in Touch
          </a>
          <a href="#projects" class="btn btn-secondary">
            <i class="fas fa-code"></i>
            View Projects
          </a>
        </div>
      </div>

      <!-- Right Side - Portrait Image -->
      <div class="hero-image" id="heroImage">
        <div class="hero-image-container">
          <img src="/potrait.jpg" alt="Ramkrishna More" class="portrait" />
          <div class="hero-image-glow"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about">
    <div class="container">
      <div class="section-header reveal">
        <h2 class="section-title">About Me</h2>
        <p class="section-subtitle">Building robust solutions with modern technologies</p>
      </div>
      <div class="about-content">
        <div class="card about-text reveal">
          <p>Self-motivated Full Stack Developer with over 1 year of corporate experience at Accenture.
            Proficient in upgrading legacy systems to modern architectures, specifically .NET 8 and Angular
            19. Skilled in building scalable web and mobile applications using React, Flutter, and Firebase.
            Adept at problem-solving and delivering robust solutions in the insurance and e-commerce
            domains.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills">
    <div class="container">
      <div class="section-header reveal">
        <h2 class="section-title">Skills</h2>
        <p class="section-subtitle">Technologies I work with</p>
      </div>
      <div class="skills-container">
        <div class="skills-category reveal">
          <h3>Frontend</h3>
          <div class="skills-grid">
            <div class="skill-chip">Angular 19</div>
            <div class="skill-chip">Angular 17</div>
            <div class="skill-chip">React.js</div>
            <div class="skill-chip">Tailwind CSS</div>
            <div class="skill-chip">Bootstrap</div>
          </div>
        </div>
        <div class="skills-category reveal">
          <h3>Backend & Database</h3>
          <div class="skills-grid">
            <div class="skill-chip">.NET 8</div>
            <div class="skill-chip">NestJS</div>
            <div class="skill-chip">Go Fiber</div>
            <div class="skill-chip">PostgreSQL</div>
            <div class="skill-chip">MySQL</div>
            <div class="skill-chip">Firebase</div>
          </div>
        </div>
        <div class="skills-category reveal">
          <h3>Cloud & AI</h3>
          <div class="skills-grid">
            <div class="skill-chip">Azure AI</div>
            <div class="skill-chip">Google Cloud</div>
            <div class="skill-chip">Docker</div>
            <div class="skill-chip">Git / GitLab</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section - Carousel -->
  <Projects autoSlideInterval={4000} />

  <!-- Experience Section -->
  <section id="experience">
    <div class="container">
      <div class="section-header reveal">
        <h2 class="section-title">Experience</h2>
        <p class="section-subtitle">Where I've worked</p>
      </div>
      <div class="experience-grid">
        <div class="card experience-card reveal">
          <h3>Software Developer</h3>
          <p style="color: var(--text-2); margin-bottom: var(--space-sm);">Accenture</p>
          <div class="experience-date">
            <i class="fas fa-calendar-alt"></i>
            Apr 2024 – Present
          </div>
          <ul class="experience-list">
            <li>Migrated backend services to .NET 8+ and frontend to Angular 19</li>
            <li>Developed Health Insurer Portal for improved performance and security</li>
            <li>Built core modules for Automobile Insurance Web App using Angular 17 & NestJS</li>
            <li>Collaborated with cross-functional teams for scalable solutions</li>
          </ul>
        </div>
        <div class="card experience-card reveal">
          <h3>Frontend Developer</h3>
          <p style="color: var(--text-2); margin-bottom: var(--space-sm);">Automart (Freelance)</p>
          <div class="experience-date">
            <i class="fas fa-calendar-alt"></i>
            May 2023 – Nov 2023
          </div>
          <ul class="experience-list">
            <li>Developed a responsive automobile resale portal</li>
            <li>Tech Stack: React.js, Tailwind CSS</li>
            <li>Designed intuitive UI for handling high traffic loads</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Certifications Section -->
  <section id="certifications">
    <div class="container">
      <div class="section-header reveal">
        <h2 class="section-title">Certifications</h2>
        <p class="section-subtitle">Professional credentials</p>
      </div>
      <div class="cert-grid">
        <div class="cert-item reveal">
          <div class="cert-icon">
            <i class="fas fa-certificate"></i>
          </div>
          <span>Certified SAFe® Practitioner</span>
        </div>
        <div class="cert-item reveal">
          <div class="cert-icon">
            <i class="fas fa-robot"></i>
          </div>
          <span>Azure AI Engineer Associate</span>
        </div>
        <div class="cert-item reveal">
          <div class="cert-icon">
            <i class="fas fa-brain"></i>
          </div>
          <span>Azure AI Fundamentals</span>
        </div>
        <div class="cert-item reveal">
          <div class="cert-icon">
            <i class="fas fa-database"></i>
          </div>
          <span>Azure Data Fundamentals</span>
        </div>
        <div class="cert-item reveal">
          <div class="cert-icon">
            <i class="fas fa-cloud"></i>
          </div>
          <span>Associate Cloud Engineer (GCP)</span>
        </div>
        <div class="cert-item reveal">
          <div class="cert-icon">
            <i class="fas fa-code"></i>
          </div>
          <span>GitHub Copilot Fundamentals</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact">
    <div class="container">
      <div class="section-header reveal">
        <h2 class="section-title">Get in Touch</h2>
        <p class="section-subtitle">Let's work together</p>
      </div>
      <div class="contact-content reveal">
        <div class="contact-info">
          <div class="contact-item">
            <i class="fas fa-envelope"></i>
            <span>Ramkrishnamore299@gmail.com</span>
          </div>
          <div class="contact-item">
            <i class="fas fa-phone"></i>
            <span>+91 9359687328</span>
          </div>
        </div>
        <div class="social-links">
          <a href="https://linkedin.com/in/" class="social-link" target="_blank" rel="noopener">
            <i class="fab fa-linkedin"></i>
            LinkedIn
          </a>
          <a href="https://github.com/" class="social-link" target="_blank" rel="noopener">
            <i class="fab fa-github"></i>
            GitHub
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <p>© 2026 Ramkrishna More. All rights reserved.</p>
  </footer>
</Layout>
