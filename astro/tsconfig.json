{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@types": [
                "src/types"
            ],
            "@styles/*": [
                "src/styles/*"
            ]
        },
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "src/**/*.astro"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}